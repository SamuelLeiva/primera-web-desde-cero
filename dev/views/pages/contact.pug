extends ../templates/template
block menu
    - pageActive = 'contact'
    include ../includes/main-menu
block title
    h1.title Contact
block main
    .contact
        .contact__form
            form.form-contact
                .form-contact__fields
                    input(type="text" name="name").form-contact__input
                    input(type="text" name="email").form-contact__input
                    input(type="text" name="subject").form-contact__input
                .form-contact__field
                    textarea(name="message" placeholder="message").form-contact__textarea
            .form-contact__field
                input(type="submit" value="Send").form__submit
        .contact__map
            iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d249743.72044706985!2d-77.12786594457322!3d-12.026603399568613!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c5f619ee3ec7%3A0x14206cb9cc452e4a!2sLima!5e0!3m2!1ses-419!2spe!4v1609263573224!5m2!1ses-419!2spe' frameborder='0' style='border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')
            a(href="https://www.google.com.pe/maps/place/Cercado+de+Lima/@-12.0552411,-77.1150917,12z/data=!3m1!4b1!4m5!3m4!1s0x9105c8db1e539667:0x4f45538aa07bda29!8m2!3d-12.046374!4d-77.0427934?hl=es-419" target="_blank")
                img(src="assets/map.png" alt="").contact__img-map
        .social
            .social__icon
                i.fab.fa-twitter-square
                i.fab.fa-twitter-square
            .social__icon
                i.fab.fa-instagram
                i.fab.fa-instagram
            .social__icon
                i.fab.fa-youtube-square
                i.fab.fa-youtube-square
            .social__icon
                i.fab.fa-pinterest-square
                i.fab.fa-pinterest-square